<header>
    <div class="header-container">
        <div class="navbar-container">
            <div class="navbar">
                <div class="nav-center">
                    <form action="/search" method="POST" autocomplete="off">
                        <div class="search">
                            <div class="icon">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </div>
                            <div class="input">
                                <input name="searched" type="text" placeholder="Search..." id="mySearch">
                            </div>
                            <span class="clear">
                                <i class="fa-solid fa-xmark"></i>
                            </span>
                        </div>
                    </form>
                </div>
                <div class="nav-left">
                    <figure>
                        <a href="/">
                            <img src="/images/logo-magus.png" alt="">
                        </a>
                    </figure>
                </div>
                <div class="nav-right">
                    <% if (locals.isLogged == true) { %>
                        <ul>
                            <li><a href="/catalogo/1">Catálogo</a></li>
                            <li><a href="/presupuestador/all">Presupuestos</a></li>
                            <li>
                                <div class="dropdown-container">
                                    <span><i class="fa-solid fa-circle-user"> </i><%= locals.userLogged.name %></span>
                                    <ul class="dropdown">
                                        <li><a href="/admin/profile">Mi perfil</a></li>
                                        <li><a href="/admin/logout">Cerrar sesión</a></li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    <% } else if (locals.isLogged == false) { %>
                        <ul>
                            <li>
                                <div class="dropdown-container">
                                    <span>Catálogo</span>
                                    <ul class="dropdown">
                                        <li><a href="/catalogo/1">Categorías</a></li>
                                        <li><a href="/catalogo/brands">Marcas</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li><a href="/presupuestador">Presupuestador</a></li>
                        </ul>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
