                            </article>
                            <article class="cliente-article">
                                <figure>
                                    <img src="/images/clients/Cliente-Agfa.jpg" alt="">
                                </figure>
                            </article>
                            <article class="cliente-article">
                                <figure>
                                    <img src="/images/clients/Cliente-Agfa.jpg" alt="">
                                </figure>
                            </article>
                            <article class="cliente-article">
                                <figure>
                                    <img src="/images/clients/Cliente-Agfa.jpg" alt="">
                                </figure>
                            </article>
                            <article class="cliente-article">
                                <figure>
                                    <img src="/images/clients/Cliente-Agfa.jpg" alt="">
                                </figure>
                            </article>
                            <article class="cliente-article">
                                <figure>
                                    <img src="/images/clients/Cliente-Agfa.jpg" alt="">
                                </figure>
                            </article>
                            <article class="cliente-article">
                                <figure>
                                    <img src="/images/clients/Cliente-Agfa.jpg" alt="">
                                </figure>
                            </article>
                        </div>
                        
                    </div>
                    
                </div>
            </section>
        </div>
    </main>
    <%- include('partials/footer')  %>
    <script src="/js/carrito.js"></script>
    <script src="/js/pedido.js"></script>
